{
  "name": "@mygov/mygov",
  "description": "MyGov.org.nz",
  "version": "4.0.0",
  "private": true,
  "homepage": "https://mygov.org.nz",
  "author": "Keri Henare <keri@henare.co.nz>",
  "license": "MIT",
  "main": "build/worker/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mygov-nz/mygov.org.nz.git"
  },
  "bugs": {
    "url": "https://github.com/mygov-nz/mygov.org.nz/issues"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "sideEffects": false,
  "scripts": {
    "dev-build": "rm -rf build && npm run build:static && npm run build:service-worker && npm run build:webworker",
    "build": "rm -rf build && NODE_ENV=production npm run build:static && NODE_ENV=production npm run build:service-worker && NODE_ENV=production npm run build:webworker",
    "build:service-worker": "babel ./src/public/js/service-worker.ts --config-file ./babel.service-worker.js --out-file ./build/public/service-worker.js",
    "build:static": "webpack --config webpack.static.js --progress",
    "build:webworker": "webpack --config webpack.webworker.js --progress",
    "generate-types": "tsm src/components",
    "start": "wrangler dev",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:lint": "eslint --ext .ts,.tsx src",
    "test:type-check": "tsc"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "0.0.9",
    "gallagher": "^1.1.0",
    "history": "^4.10.1",
    "mem": "^6.1.0",
    "preact": "^10.4.1",
    "preact-render-to-string": "^5.1.6",
    "saintelague": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@cloudflare/workers-types": "^1.0.9",
    "@cloudflare/wrangler": "^1.8.4",
    "@types/history": "^4.7.5",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-console-source": "^2.0.4",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "babel-plugin-minify-replace": "^0.5.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-preset-minify": "^0.5.1",
    "compression-webpack-plugin": "^3.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "faster.js": "^1.1.1",
    "fibers": "^5.0.0",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss": "^7.0.27",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.4",
    "terser-webpack-plugin": "^2.3.5",
    "ts-jest": "^25.4.0",
    "typed-scss-modules": "^1.3.0",
    "types-cloudflare-worker": "^1.1.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.2",
    "webpack-pwa-manifest": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.scss": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
